<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<!-- TODO: initial values -->

	<changeSet id="create_continuous_tree_table" author="fbielejec">
		<createTable tableName="continuous_tree">
			<column name="id" autoIncrement="true" type="BIGINT">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="treeFilename" type="VARCHAR(100)">
			</column>
			<!-- meta: longitude -->
			<column name="xCoordinate" type="VARCHAR(50)">
			</column>
			<!-- meta: latitude -->
			<column name="yCoordinate" type="VARCHAR(50)">
			</column>
			<column name="hpdLevel" type="FLOAT">
			</column>
			<column name="mrsd" type="VARCHAR(20)">
			</column>
			<column name="timescaleMultiplier" type="FLOAT">
			</column>
			<column name="geojsonFilename" type="VARCHAR(100)">
			</column>
			<column name="hasExternalAnnotations" type="BOOLEAN">
			</column>
			<column name="outputFilename" type="VARCHAR(100)">
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>