<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

  <Properties>

    <Property name="LOG_FILE_PATH">${bundle:application:log.file.path}</Property>

    <Property name="CONSOLE_LOG_PATTERN">
      %d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=green, DEBUG=green bold, TRACE=blue} %style{${sys:PID}}{magenta} [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}
    </Property>

    <Property name="FILE_LOG_PATTERN">
      %d %p %c{1.} [%t] %m%n
    </Property>

  </Properties>

  <Appenders>

    <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
      <PatternLayout pattern="${CONSOLE_LOG_PATTERN}"/>
    </Console>

    <File name="FileAppender" fileName="${LOG_FILE_PATH}">
      <PatternLayout pattern="${FILE_LOG_PATTERN}"/>
    </File>

    <Sentry name="Sentry" />

  </Appenders>

  <Loggers>

    <Root level="info">
      <AppenderRef ref="ConsoleAppender" />
      <AppenderRef ref="FileAppender" />
      <!-- Sentry logging threshold is overridden to the WARN level -->
      <appender-ref ref="Sentry" level="ERROR" />
    </Root>

  </Loggers>
</Configuration>
